{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "isolatedModules": false,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "sourceMap": true
  },
  "filesGlob": [
    "client/**/*.ts",
    "server/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "/.meteor/",
    "/.idea/",
    "/.vscode/chrome/"
  ]
}